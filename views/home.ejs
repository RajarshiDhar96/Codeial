<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

  


        <!-- <h1>Codeial/ <%= title%></h1> -->

        <div class="home-container">
                <section id="feed-posts">
                        
                        <% if(locals.user){%>
                        <form  action="/posts/create" id="new-post-form" method="POST" >
                                <textarea name="content"  cols="30" rows="3" placeholder="What's on your mind?????" required></textarea><br>
                                <input type="submit" value="Post" id="post-submit">
                        </form>
                        <% } %>
        
                        <div id="post-list-container">
                                <ul>
                                   <% for(post of posts) {%>   
                                        <%- include('_post') -%>
                                   
                                   <%}%>
                                </ul>
                        </div>
                </section>
        
        
                <section id="user-friends">
        
                        <h4><i class="fa-solid fa-user-group"></i> Friends</h4>
                        
                        <% for(u of all_users){ %>
                                <p>
                                        <a href="/users/profile/<%= u.id%>"><i class="fa-regular fa-hand-point-right"></i><%= u.name %></a>
                                </p>
        
                        <%}%>
                </section>
        



        </div>
        <script src="/js/home_posts.js"></script>
     

        
         
 